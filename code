/* ========================================
   VARI√ÅVEIS GLOBAIS
   ======================================== */

let currentIndex = 0;
let correctAnswers = 0;
let totalAttempts = 0;
let isFlipped = false;
let hasAnswered = false;

/* ========================================
   ELEMENTOS DO DOM
   ======================================== */

const flashcard = document.getElementById('flashcard');
const statementEl = document.getElementById('statement');
const verdictLabelEl = document.getElementById('verdict-label');
const verdictBadgeEl = document.getElementById('verdict-badge');
const explanationEl = document.getElementById('explanation');
const progressTextEl = document.getElementById('progress-text');
const progressFillEl = document.getElementById('progress-fill');
const correctCountEl = document.getElementById('correct-count');
const totalCountEl = document.getElementById('total-count');
const prevBtn = document.getElementById('prev-btn');
const nextBtn = document.getElementById('next-btn');
const decisionButtons = document.getElementById('decision-buttons');

/* ========================================
   FUN√á√ïES PRINCIPAIS
   ======================================== */

/**
 * Inicializa a aplica√ß√£o ao carregar a p√°gina
 */
function init() {
    loadCard();
    updateProgress();
    updateStats();
    updateNavigationButtons();
    
    // Permite clicar no card para virar (apenas se ainda n√£o respondeu)
    flashcard.addEventListener('click', function(e) {
        // N√£o vira se clicar no bot√£o de voltar
        if (e.target.classList.contains('btn-flip')) {
            return;
        }
        // S√≥ vira se j√° tiver respondido
        if (hasAnswered && !isFlipped) {
            flipCard();
        }
    });
}

/**
 * Carrega o card atual com os dados do array
 */
function loadCard() {
    const currentCard = flashcardsData[currentIndex];
    
    // Atualiza o texto da afirma√ß√£o
    statementEl.textContent = currentCard.afirmacao;
    
    // Atualiza o verso com a resposta e explica√ß√£o
    verdictBadgeEl.textContent = currentCard.resposta.toUpperCase();
    verdictBadgeEl.className = `verdict-badge ${currentCard.resposta}`;
    explanationEl.textContent = currentCard.explicacao;
    
    // Reset do estado do card
    flashcard.classList.remove('flipped');
    isFlipped = false;
    hasAnswered = false;
    
    // Mostra os bot√µes de decis√£o novamente
    decisionButtons.classList.remove('hidden');
}

/**
 * Vira o card para mostrar a resposta
 */
function flipCard() {
    flashcard.classList.toggle('flipped');
    isFlipped = !isFlipped;
}

/**
 * Verifica se a resposta do usu√°rio est√° correta
 * @param {string} userAnswer - 'fato' ou 'mito'
 */
function checkAnswer(userAnswer) {
    // Previne m√∫ltiplas respostas
    if (hasAnswered) return;
    
    const currentCard = flashcardsData[currentIndex];
    const isCorrect = userAnswer === currentCard.resposta;
    
    // Atualiza estat√≠sticas
    totalAttempts++;
    if (isCorrect) {
        correctAnswers++;
    }
    
    // Marca como respondido
    hasAnswered = true;
    
    // Vira o card automaticamente para mostrar a explica√ß√£o
    setTimeout(() => {
        flipCard();
        decisionButtons.classList.add('hidden');
    }, 300);
    
    // Atualiza display de estat√≠sticas
    updateStats();
    
    // Feedback visual (opcional - pode adicionar anima√ß√£o ou som)
    if (isCorrect) {
        flashcard.style.animation = 'none';
        setTimeout(() => {
            flashcard.style.animation = '';
        }, 10);
    }
}

/**
 * Vai para o card anterior
 */
function previousCard() {
    if (currentIndex > 0) {
        currentIndex--;
        loadCard();
        updateProgress();
        updateNavigationButtons();
    }
}

/**
 * Vai para o pr√≥ximo card
 */
function nextCard() {
    if (currentIndex < flashcardsData.length - 1) {
        currentIndex++;
        loadCard();
        updateProgress();
        updateNavigationButtons();
    }
}

/**
 * Atualiza a barra e texto de progresso
 */
function updateProgress() {
    const current = currentIndex + 1;
    const total = flashcardsData.length;
    const percentage = (current / total) * 100;
    
    progressTextEl.textContent = `${current} / ${total}`;
    progressFillEl.style.width = `${percentage}%`;
}

/**
 * Atualiza o display de estat√≠sticas
 */
function updateStats() {
    correctCountEl.textContent = correctAnswers;
    totalCountEl.textContent = totalAttempts;
}

/**
 * Atualiza o estado dos bot√µes de navega√ß√£o
 */
function updateNavigationButtons() {
    // Desabilita o bot√£o anterior se estiver no primeiro card
    prevBtn.disabled = currentIndex === 0;
    
    // Desabilita o bot√£o pr√≥ximo se estiver no √∫ltimo card
    nextBtn.disabled = currentIndex === flashcardsData.length - 1;
}

/* ========================================
   INICIALIZA√á√ÉO
   ======================================== */

// Aguarda o DOM estar completamente carregado
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
} else {
    init();
}

/* ========================================
   FUN√á√ïES AUXILIARES PARA EXTENS√ÉO
   ======================================== */

/**
 * Embaralha os cards (opcional - pode ser usado para modo aleat√≥rio)
 */
function shuffleCards() {
    for (let i = flashcardsData.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [flashcardsData[i], flashcardsData[j]] = [flashcardsData[j], flashcardsData[i]];
    }
}

/**
 * Reseta o progresso do usu√°rio
 */
function resetProgress() {
    currentIndex = 0;
    correctAnswers = 0;
    totalAttempts = 0;
    loadCard();
    updateProgress();
    updateStats();
    updateNavigationButtons();
}

// Exp√µe fun√ß√µes globalmente para uso nos bot√µes HTML
window.flipCard = flipCard;
window.checkAnswer = checkAnswer;
window.previousCard = previousCard;
window.nextCard = nextCard;


